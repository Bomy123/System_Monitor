<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    coreApp="true"
    package="com.skyworth.system_monitor"
    android:sharedUserId="android.uid.system"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" >
    </uses-permission>
    <uses-permission android:name="android.permission.DELETE_PACKAGES" >
    </uses-permission>
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_label"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity1"
            android:label="@string/title_activity_main_activity1" >
        </activity>
        <activity
            android:name=".AppDetils"
            android:label="@string/title_activity_app_detils" >
        </activity>
        <activity
            android:name=".App_Manage"
            android:label="@string/title_activity_app__manage" >
        </activity>
    </application>

</manifest>
